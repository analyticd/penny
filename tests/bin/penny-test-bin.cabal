name: penny-test-bin
version: 0.1.0.0
Cabal-version: >=1.8
Build-Type: Simple
License: MIT
Copyright: 2012 Omari Norman.
author: Omari Norman
maintainer: omari@smileystation.com
stability: Experimental
homepage: http://www.github.com/massysett/penny
bug-reports: omari@smileystation.com
Category: Console, Finance
License-File: LICENSE
synopsis: Tests for Penny

description: The test executables for Penny is housed in this
             package. The test library is in a separate package.

Executable pennyTestSuite
  main-is: TestSuite.hs
  Build-depends:
    base ==4.*,
    penny-test-lib ==0.1.*,
    test-framework ==0.5.*

  GHC-Options: -Wall

Executable copperTest
  Build-depends:
    base ==4.*,
    text ==0.11.*,
    time ==1.2.*,
    parsec >=3.1.2 && < 3.2,
    penny ==0.1.*,
    pretty ==1.0.*,
    penny-test-lib ==0.1.*

  Main-is: copperTest.hs
  GHC-Options: -Wall

Executable gibberish
  Build-depends:
    base ==4.*,
    penny-test-lib ==0.1.*,
    penny ==0.1.*,
    QuickCheck ==2.4.*,
    random ==1.0.*,
    text ==0.11.*

  Main-is: gibberish.hs
  GHC-Options: -Wall
